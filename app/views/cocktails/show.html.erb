<div class = "containter">
  <div class = "row">
    <div class= "col-sm-6 col-sm-offset-4">
      <h2><%= @cocktail.name %></h2>
      <% @cocktail.doses.each do |dose| %>
      <p><%= dose.description %></p>
      <p><%= dose.ingredient.name %></p>
      <% end %>
      <p><%= link_to "Add a new Dose", new_cocktail_dose_path(@cocktail)  %></p>
    </div>
  </div>
</div>
